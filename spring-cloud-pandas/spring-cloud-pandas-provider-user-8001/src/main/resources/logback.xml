<configuration>
	<property name="LOG_HOME" value="D:/Software/IntelliJ IDEA/WorkSpaces/OpenSource/Advanced/spring-cloud-pandas/spring-cloud-pandas-provider-user-8001/src/main/resources/logs"/>
	<appender name="INFO_FILE"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>${LOG_HOME}/temp.log</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>${LOG_HOME}/temp-%d{yyyy-MM-dd}.log
			</fileNamePattern>
			<maxHistory>30</maxHistory>
		</rollingPolicy>
		<encoder>
			<pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{100} - %msg%n
			</pattern>
		</encoder>
		<append>false</append>
		<prudent>false</prudent>
	</appender>

	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{100} - %msg%n
			</pattern>
		</encoder>
	</appender>

	<logger name="com.cloud.pandas" level="DEBUG" additivity="false">
		<appender-ref ref="INFO_FILE" />
	</logger>

	<root level="INFO">
		<appender-ref ref="STDOUT" />
	</root>

</configuration>  